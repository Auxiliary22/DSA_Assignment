#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};

Node* head = NULL;

void insert(int val) {
    Node* newNode = new Node{val, head};
    head = newNode;
}

int deleteOccurrences(int key) {
    int count = 0;
    while (head && head->data == key) {
        Node* temp = head;
        head = head->next;
        delete temp;
        count++;
    }
    Node* curr = head;
    while (curr && curr->next) {
        if (curr->next->data == key) {
            Node* temp = curr->next;
            curr->next = temp->next;
            delete temp;
            count++;
        } else {
            curr = curr->next;
        }
    }
    return count;
}

void display() {
    Node* temp = head;
    while (temp) {
        cout << temp->data << " -> ";
        temp = temp->next;
    }
    cout << "NULL\n";
}

int main() {
    insert(1); insert(3); insert(1); insert(2); insert(1); insert(2); insert(1);
    cout << "Original list: "; display();
    int key = 1;
    int count = deleteOccurrences(key);
    cout << "Occurrences deleted: " << count << endl;
    cout << "List after deletion: "; display();
}